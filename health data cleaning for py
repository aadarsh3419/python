import pandas as pd
import numpy as np

# Simulated health data with missing values
df = pd.DataFrame({
    'Date': pd.date_range(start='2025-08-01', periods=5),
    'Steps': [5000, np.nan, 7000, np.nan, 10000],
    'Sleep_Hours': [6.5, 7.0, np.nan, 8.0, 6.0]
})

# Fill missing steps with average
df['Steps'].fillna(df['Steps'].mean(), inplace=True)
# Drop rows where sleep data is missing
df.dropna(subset=['Sleep_Hours'], inplace=True)

print(df)
